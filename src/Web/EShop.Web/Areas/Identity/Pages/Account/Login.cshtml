@page "/vhod"
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 card text-center">
        <div class="row h4 mt-3">
            <div class="col-6 text-center">
                <a class=" text-dark" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Вход</a>
            </div>
            <div class="col-6 text-center">
                <a class=" text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
            </div>
        </div>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group text-left">
                    <label>Имейл</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <label>Парола</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Запомни ме
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Вход</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Препрати имейл потвърждение</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-3"></div>

</div>

<br>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
