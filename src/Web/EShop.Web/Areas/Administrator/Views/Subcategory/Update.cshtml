@model EShop.Models.ServiceModels.Subcategories.SubcategoryFormModel
@inject EShop.Services.Subcategory.ISubcategoryService subcategoryService
@{
    this.ViewData["Title"] = $"Редакция на {Model.Name}";
}

<form asp-area="Administrator" asp-controller="Subcategory" asp-action="Update" method="post">

    <div class="form-group">
        <label class="font-weight-bold">Име на подкатегория</label>
        <input class="form-control" id="disabledInput" type="text" placeholder="@Model.Name" disabled>

        <label class="font-weight-bold">Ново Име</label>
        <input asp-for="@Model.Name" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label class="font-weight-bold">Позиция</label>
        <input class="form-control" id="disabledInput" type="text" placeholder="@Model.Position" disabled>

        <label class="font-weight-bold">Нова позиция</label>
        <input asp-for="@Model.Position" type="text" class="form-control">
    </div>
    <input asp-for="@Model.Id" type="hidden" value="@Model.Id" />

    <input type="submit" class="btn btn-success col-12" name="name" value="Запази промени" />
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
